<div id="LL_userInform">
    <% if (user != undefined  && user.profile.avatar != "") { %>
        <p style="float:left; margin-top: 12px;"> <%= user.profile.firstName %> </p>
        <div id="LL_userFoto">
            <img style="width: 100%; height: 100%; vertical-align: baseline" src="<%= user.profile.avatar%>" />
        </div>
        <i style="margin-top: 15px" class="fa fa-caret-down" aria-hidden="true"></i>
    <% } else { %>
        <div style="margin-left: 60px" id="LL_userFoto">
            <i class="fa fa-user" aria-hidden="true"></i>
        </div>
        <i style="margin-top: 15px" class="fa fa-caret-down" aria-hidden="true"></i>
    <% } %>
